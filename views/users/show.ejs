<%include ../partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1><%=user.firstName+" "+user.lastName%></h1>
            <div class="thumbnail">
                <img src="<%=user.avatar%>" alt="user profile image">
                <div class="caption"><a href="mailto:<%=user.email%>"><%=user.email%></a></div>
            </div>
            This is a good post and we are going to display all the posts by that user on the user profile page.
        </div>
        <div class="col-md-8">
            <h3><%=user.username%>'s Campgrounds</h3>
            <ul>
                <%campgrounds.forEach(function(campground){%>
                <a href="/campgrounds/<%=campground.id%>"><%=campground.name%></a>
                <%});%>
            </ul>
        </div>
    </div>
</div>


<%include ../partials/footer%>