<%- include('./partials/header'); -%>

<!-- Page Contents -->
<main class="container">
    <form class="login-register" action="/register" method="POST">
        <div class="text-center mb-4">
            <img class="mb-4" src="../public/img/user.png" alt="" width="100" height="100">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        </div>

        <div class="form-group">
            <input id="username" class="form-control" type="text" name="username" placeholder="Username" required
                autofocus>
            <label for="username">Username</label>
        </div>

        <div class="form-group">
            <input id="password" class="form-control" type="password" name="password" placeholder="Password" required>
            <label for="password">Password</label>
        </div>

        <div class="form-group">
            <input id="first-name" class="form-control" type="text" name="firstName" placeholder="First Name" required>
            <label for="first-name">First Name</label>
        </div>

        <div class="form-group">
            <input id="last-name" class="form-control" type="text" name="lastName" placeholder="Last Name" required>
            <label for="last-name">Last Name</label>
        </div>

        <div class="form-group">
            <input id="email" class="form-control" type="email" name="email" placeholder="Email Address" required>
            <label for="email">Email Address</label>
        </div>

        <div class="form-group">
            <input id="campground-image" class="form-control" type="text" name="avatar"
                placeholder="give url of your image here">
            <label for="campground-image">Avatar</label>
        </div>

        <div class="form-group">
            <input id="admin-access" class="form-control" type="password" name="adminCode" placeholder="admin code">
            <label for="admin-access">Admin</label>
        </div>

        <button class="btn btn-lg btn-secondary btn-block" type="submit">Sign up</button>
        <a href="/campgrounds"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Go Back</a>
    </form>
</main>

<%- include('./partials/footer'); -%>

