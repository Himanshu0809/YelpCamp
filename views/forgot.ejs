<%include ./partials/header%>
<main role="main" class="flex-shrink-0 page forgot-pass" style="margin-top: 20px;">
    <section class="forgot-pass-form dark">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h1>
                                Forgot Password
                            </h1>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <div class="container" style="padding:0 10%;">
                                    <form action="/forgot" method="POST">
                                        <div class="form-group">
                                            <input id="email" type="email" name="email" autofocus class="form-control"
                                                placeholder="Enter E-Mail">
                                            <label for="email">Email: </label>
                                        </div>

                                        <div class="form-group">
                                            <button class="btn btn-lg btn-primary btn-block" value="Reset Password"
                                                type="submit">Submit</button>
                                            <!-- <input type="submit" class="btn btn-primary" value="Reset Password"> -->
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%include ./partials/footer%>